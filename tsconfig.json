{
  "compilerOptions": {
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceRoot": "src",
    "baseUrl": "./src",
    "module": "ESNext",
    "target": "ESNext",
    "useDefineForClassFields": false,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": false,
    "checkJs": false,
    "removeComments": false,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictFunctionTypes": true,
    "downlevelIteration": true,
    "noEmitOnError": true,
    "lib": [
      "es2015",
      "es2016",
      "es2018",
      "ES2019",
      "ES2020",
      "dom"
    ]
  },
  "compileOnSave": false,
  "include": [
    "./src/**/*.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": false
  }
}
